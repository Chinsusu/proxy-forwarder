<Window x:Class="ProxyForwarder.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ProxyForwarder.App.Views"
        Title="CloudMini Proxy" Height="720" Width="1260" Background="#0F1115" Foreground="#EAEAEA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="16" Background="#151821">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <Border Width="36" Height="36" CornerRadius="8" Background="{StaticResource PrimaryGradient}"/>
                <TextBlock Text="CloudMini Proxy" FontSize="20" FontWeight="Bold" Margin="12,0" />
                <TextBlock Text="Premium" Margin="12,0,0,0" FontSize="12" Foreground="#C0FFC0"/>
                <TextBlock Text="Fast Delivery" Margin="8,0,0,0" FontSize="12" Foreground="#C0E0FF"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="16" Background="#151821">
            <TabItem Header="Import">
                <views:ImportView/>
            </TabItem>
            <TabItem Header="Proxies">
                <views:ProxiesView/>
            </TabItem>
            <TabItem Header="Forwarders">
                <views:ForwardersView/>
            </TabItem>
            <TabItem Header="Logs">
                <views:LogsView/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
