<UserControl x:Class="ProxyForwarder.App.Views.ProxiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource PrimaryButton}" Height="36" Margin="0,0,6,0"/>
            <Button Content="Refresh Ping" Command="{Binding PingCommand}" Height="36"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" HeadersVisibility="Column"
                  CanUserAddRows="False" Background="{StaticResource Brush.Surface}" 
                  Foreground="{StaticResource Brush.Text}" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Host" Binding="{Binding Host}" Width="200"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                <DataGridTextColumn Header="Ping (ms)" Binding="{Binding Ping}" Width="100"/>
                <DataGridTextColumn Header="Exit IP" Binding="{Binding ExitIp}" Width="150"/>
                <DataGridTextColumn Header="ISP" Binding="{Binding ISP}" Width="150"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120"/>
                <DataGridTextColumn Header="Thời gian hết hạn" Binding="{Binding DaysRemaining}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
