<UserControl x:Class="ProxyForwarder.App.Views.ForwardersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <Button Content="Start/Stop All" Command="{Binding ToggleAllCommand}" Style="{StaticResource PrimaryButton}" Height="36"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Rows}" AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="{StaticResource Brush.Surface}" Foreground="{StaticResource Brush.Text}" 
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Upstream" Binding="{Binding Upstream}" Width="*"/>
                <DataGridTextColumn Header="Local Proxy" Binding="{Binding LocalPort, Converter={StaticResource LocalPortConverter}}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTemplateColumn Header="Actions" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Status, Converter={StaticResource StatusToButtonTextConverter}}" Command="{Binding DataContext.ToggleOneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
