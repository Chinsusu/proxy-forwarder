<UserControl x:Class="ProxyForwarder.App.Views.ForwardersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ProxyForwarder.App.ViewModels">
    <UserControl.DataContext>
        <vm:ForwardersViewModel/>
    </UserControl.DataContext>
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <Button Content="Start all" Command="{Binding StartAllCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
            <Button Content="Stop all" Command="{Binding StopAllCommand}" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Rows}" AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="#1B1F2A" Foreground="#EAEAEA" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Upstream" Binding="{Binding Upstream}" Width="*"/>
                <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTemplateColumn Header="Actions" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Start" Command="{Binding DataContext.StartOneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="0,0,8,0"/>
                                <Button Content="Stop" Command="{Binding DataContext.StopOneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
