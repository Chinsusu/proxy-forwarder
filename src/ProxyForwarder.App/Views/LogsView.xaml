<UserControl x:Class="ProxyForwarder.App.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <Button Content="Open logs folder" Command="{Binding OpenFolderCommand}" />
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="8,0,0,0"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding Text}" IsReadOnly="True" TextWrapping="Wrap" Background="#1B1F2A" Foreground="#EAEAEA" BorderThickness="0"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
