<UserControl x:Class="ProxyForwarder.App.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <Button Content="Open Logs Folder" Command="{Binding OpenFolderCommand}" Style="{StaticResource PrimaryButton}" Height="36" Margin="0,0,8,0"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" Style="{StaticResource PrimaryButton}" Height="36"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox Text="{Binding Text}" IsReadOnly="True" TextWrapping="Wrap"
                     Background="{StaticResource Brush.Surface}" Foreground="{StaticResource Brush.Text}"
                     BorderThickness="0"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
